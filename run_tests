#!/bin/sh
set -eu

PY_FILES=$(find . -type f -name "*.py")

export SQLALCHEMY_DATABASE_URI=${SQLALCHEMY_DATABASE_URI:-postgresql://postgres@localhost/test}

rm -rf ./shippable
mkdir -p ./shippable/testresults ./shippable/codecoverage

cleanup() {
    [ -f ./coverage.xml ] && mv ./coverage.xml ./shippable/codecoverage
}

trap cleanup EXIT

python -m pep8 $PY_FILES
python -m pylint -E backend
python -m pytest \
       --junitxml ./shippable/testresults/pytest.xml \
       --doctest-modules \
       --cov=backend \
       --cov-report term \
       --cov-report xml \
       --cov-report html \
       --pyargs backend
